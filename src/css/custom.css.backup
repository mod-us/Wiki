/* Horizontal rules - cleaner */
.markdown hr,
article hr {
  border: none !important;
  border-top: 1px solid #e5e7eb !important;
  margin: 3rem 0 !important;
  opacity: 1 !important;
}

/* Lists - better spacing */
.markdown ul,
.markdown ol,
article ul,
article ol {
  margin: 1rem 0;
  padding-left: 1.75rem;
}

.markdown li,
article li {
  margin: 0.5rem 0;
  line-height: 1.7;
  font-size: 0.9375rem;
}

.markdown ul > li::marker,
article ul > li::marker {
  color: #9ca3af !important;
  font-weight: normal !important;
}

.markdown ol > li::marker,
article ol > li::marker {
  color: #6b7280 !important;
  font-weight: 600 !important;
}

/* Strong/bold text */
.markdown strong,
article strong {
  color: #1a1a1a !important;
  font-weight: 600;
}

/* Content max width and spacing for better readability - Linear style */
.theme-doc-markdown.markdown {
  max-width: 100%;
}

/* Main article/doc content spacing */
article {
  padding: 1.5rem 4rem 4rem 4rem !important;
  max-width: 900px;
}

.theme-doc-markdown {
  max-width: 100%;
}

/* Responsive spacing */
@media (max-width: 1280px) {
  article {
    padding: 1.5rem 3rem 4rem 3rem !important;
  }
}

@media (max-width: 996px) {
  article {
    padding: 1.25rem 2rem 3rem 2rem !important;
  }
}

@media (max-width: 768px) {
  article {
    padding: 1rem 1.5rem 2rem 1.5rem !important;
  }
}

.markdown > *,
article > * {
  max-width: 100%;
}

/* Remove h2 borders - use clean Linear style */
.markdown h2,
article h2,
.theme-doc-markdown h2 {
  border-bottom: none !important;
  padding-bottom: 0 !important;
}
